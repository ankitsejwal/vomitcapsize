<div class="row vh-100 vw-100">
  <div id="paragraph" class="col" contenteditable="true">
    Paste your text here ...
  </div>
</div>

<div class="links left">
  <p>
    <button id="copy" class="btn btn-light" onclick="copyToClipboard()">
      copy txt
    </button>
  </p>
  <p class="d-flex justify-content-between">
    <button class="btn btn-outline-light" onclick="fontSize(+4)">+</button>
    <button class="btn btn-outline-light" onclick="fontSize(-4)">-</button>
  </p>
</div>

<div class="links right">
  <p>
    <button class="btn btn-block btn-success" onclick="titlecase()">
      TitleCase
    </button>
  </p>
  <p>
    <button class="btn btn-block btn-info" onclick="lowercase()">
      lowercase
    </button>
  </p>
  <p>
    <button class="btn btn-block btn-warning" onclick="uppercase()">
      UPPERCASE
    </button>
  </p>
</div>
